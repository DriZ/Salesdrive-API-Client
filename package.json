{
  "name": "salesdrive-api-client",
  "version": "1.2.0",
  "description": "Modern SalesDrive API Client",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "prepack": "npm run build",
    "prepare": "husky",
    "docs": "typedoc",
    "dev": "tsx -r dotenv/config index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "test:coverage": "jest --coverage",
    "preversion": "npm run test:coverage && npm run build",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "npm version"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/driz/salesdrive-api-client.git"
  },
  "bugs": {
    "url": "https://github.com/driz/salesdrive-api-client/issues"
  },
  "homepage": "https://salesdrive.driz.pp.ua",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "salesdrive",
    "api-client",
    "typescript"
  ],
  "author": "Alex Driz",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.13.5",
    "axios-retry": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "conventional-changelog-cli": "^5.0.0",
    "dotenv": "^17.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "ts-jest": "^29.1.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}